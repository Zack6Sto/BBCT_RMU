<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.post.PostActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="393dp">

        <RelativeLayout
            android:id="@+id/rellaylPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imvProPic_Post"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo_png" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imvProPic_Post"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_NamePost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="บุญครอง สมถวิล"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/TV_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 hrs"
                    android:textColor="#000000"
                    android:textSize="11dp" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="115dp"
            android:background="@color/colorAccent" />

        <EditText
            android:id="@+id/EDT_Post_Text"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:hint="คุณกำลังตามหาอะไรอยู่....?"
            android:layout_marginTop="115dp" />

        <Button
            android:id="@+id/btnPost_Ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:shadowRadius="50"
            android:text="โพสต์" />

    </androidx.cardview.widget.CardView>


</LinearLayout>